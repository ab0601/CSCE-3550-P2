{
  "name": "jwks-server",
  "version": "1.0.0",
  "description": "SQLite-backed JWKS authentication server with JWT signing, Jest test coverage, and ESLint linting.",
  "type": "module",
  "main": "server.mjs",
  "scripts": {
    "start": "node server.mjs",
    "test": "cross-env NODE_ENV=test DB_FILE=./test-keys.db NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "express": "^4.19.2",
    "jose": "^5.10.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
